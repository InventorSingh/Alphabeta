---
import astroLogo from '../assets/astro.svg';
import sunriseTheme from '../assets/sunriseTheme.svg';
---

<div id="container">
	<img id="background" src={sunriseTheme.src} alt="Sunrise Theme Background" fetchpriority="high" />
	<main>
		<section id="hero">
			<h1>Welcome to Sunrise Teams</h1>
			<p>Create your family team and share your skills with the world!</p>
			<section id="actions">
				<a class="button" href="/create-team">Create a Team</a>
				<a href="/featured-teams" class="button">Explore Featured Teams</a>
			</section>
		</section>
	</main>

	<footer>
		<p>&copy; 2024 Sunrise Teams - Building Stories Together</p>
	</footer>
</div>

<style>
	#background {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
		filter: blur(50px);
	}

	#container {
		font-family: Arial, sans-serif;
		height: 100%;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		background: linear-gradient(to bottom, #FFF3E0, #FFE0B2);
		color: #E65100;
	}

	main {
		text-align: center;
	}

	#hero {
		padding: 16px;
		border-radius: 10px;
		background: rgba(255, 87, 34, 0.1);
		border: 2px solid #FF5722;
	}

	h1 {
		font-size: 2.5rem;
		margin-bottom: 0.5rem;
	}

	p {
		font-size: 1.25rem;
		margin-bottom: 1.5rem;
	}

	#actions {
		display: flex;
		gap: 16px;
		justify-content: center;
	}

	#actions a {
		display: inline-block;
		padding: 10px 20px;
		color: white;
		background: linear-gradient(to right, #FF9800, #FF5722);
		border-radius: 10px;
		text-decoration: none;
		transition: background-color 0.3s;
	}

	#actions a:hover {
		background: linear-gradient(to right, #E65100, #FF5722);
	}

	footer {
		margin-top: 2rem;
		font-size: 1rem;
		color: #F57C00;
	}
</style>
