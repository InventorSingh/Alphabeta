---
import sunriseTheme from '../assets/sunriseTheme.svg';
import Footer from '../components/Footer.astro';
---

<div id="featured-teams-container">
  <img id="background" src={sunriseTheme.src} alt="Sunrise Theme Background" fetchpriority="high" />
  <main>
    <section id="featured-teams">
      <h1>Explore Featured Teams</h1>
      <div class="team-cards">
        <!-- Team Card 1 -->
        <div class="team-card">
          <div class="team-image">
            <svg viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg" fill="#FF9800">
              <circle cx="50" cy="50" r="40" />
              <text x="50%" y="55%" dominant-baseline="middle" text-anchor="middle" fill="#FFF" font-size="12">Team 1</text>
            </svg>
          </div>
          <div class="team-content">
            <h2>Awesome Innovators</h2>
            <p>Providing top-notch software solutions and community development expertise.</p>
            <div class="team-actions">
              <a href="/team/1" class="button">Details</a>
              <a href="/team/1/blog" class="button secondary">Blog</a>
              <a href="/hire/1" class="button">Hire Us</a>
            </div>
          </div>
        </div>

        <!-- Team Card 2 -->
        <div class="team-card">
          <div class="team-image">
            <svg viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg" fill="#FF9800">
              <circle cx="50" cy="50" r="40" />
              <text x="50%" y="55%" dominant-baseline="middle" text-anchor="middle" fill="#FFF" font-size="12">Team 2</text>
            </svg>
          </div>
          <div class="team-content">
            <h2>Creative Builders</h2>
            <p>Specializing in design, marketing, and storytelling for impactful campaigns.</p>
            <div class="team-actions">
              <a href="/team/2" class="button">Details</a>
              <a href="/team/2/blog" class="button secondary">Blog</a>
              <a href="/hire/2" class="button">Hire Us</a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</div>

<style>
  #background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    filter: blur(50px);
  }

  #featured-teams-container {
    font-family: Arial, sans-serif;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: linear-gradient(to bottom, #FFF3E0, #FFE0B2);
    color: #E65100;
  }

  main {
    text-align: center;
    width: 100%;
    max-width: 900px;
    padding: 2rem;
  }

  .team-cards {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
    justify-content: center;
  }

  .team-card {
    background: rgba(255, 87, 34, 0.1);
    border: 2px solid #FF5722;
    border-radius: 10px;
    padding: 16px;
    width: 300px;
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
  }

  .team-image {
    text-align: center;
    margin-bottom: 16px;
  }

  .team-content h2 {
    font-size: 1.5rem;
    margin: 0.5rem 0;
  }

  .team-content p {
    font-size: 1rem;
    margin: 0.5rem 0 1rem;
    color: #E65100;
  }

  .team-actions {
    display: flex;
    gap: 8px;
    justify-content: center;
  }

  .button {
    padding: 10px 16px;
    border-radius: 8px;
    color: white;
    text-decoration: none;
    background: linear-gradient(to right, #FF9800, #FF5722);
    font-size: 0.875rem;
    transition: background-color 0.3s;
  }

  .button.secondary {
    background: linear-gradient(to right, #E65100, #FF5722);
  }

  .button:hover {
    background: linear-gradient(to right, #E65100, #FF5722);
  }
</style>
