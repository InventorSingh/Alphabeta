---
import sunriseTheme from '../assets/sunriseTheme.svg';
import alphabetaLogo from '../assets/alphabeta-logo.svg';
---

<div id="team-container">
  <img id="background" src={sunriseTheme.src} alt="Sunrise Theme Background" fetchpriority="high" />
  <main>
    <section id="hero">
      <img id="logo" src={alphabetaLogo.src} alt="Alphabeta Logo" />
      <h1>Meet Our Team</h1>
      <p>
        The passionate individuals behind Alphabeta. Connect with us and learn more about our mission to combine technology and community service.
      </p>
    </section>

    <section id="team">
      <div class="team-grid">
        <!-- Team Member 1 -->
        <div class="team-card">
          <img src="/path/to/member1.jpg" alt="Team Member 1" class="team-photo" />
          <h3>Jane Doe</h3>
          <p>Software Engineer</p>
          <div class="social-links">
            <a href="https://linkedin.com/in/janedoe" target="_blank">LinkedIn</a>
            <a href="mailto:jane.doe@example.com">Email</a>
          </div>
        </div>

        <!-- Team Member 2 -->
        <div class="team-card">
          <img src="/path/to/member2.jpg" alt="Team Member 2" class="team-photo" />
          <h3>John Smith</h3>
          <p>Marketing Specialist</p>
          <div class="social-links">
            <a href="https://twitter.com/johnsmith" target="_blank">Twitter</a>
            <a href="mailto:john.smith@example.com">Email</a>
          </div>
        </div>

        <!-- Add more team members as needed -->
      </div>
    </section>
  </main>

  <footer>
    <p>&copy; 2024 Alphabeta - Empowering Technology and Communities</p>
  </footer>
</div>

<style>
  #background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    filter: blur(50px);
  }

  #team-container {
    font-family: Arial, sans-serif;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: linear-gradient(to bottom, #FFF3E0, #FFE0B2);
    color: #E65100;
  }

  main {
    text-align: center;
    padding: 2rem;
  }

  #logo {
    width: 100px;
    margin-bottom: 1rem;
  }

  #hero {
    padding: 16px;
    border-radius: 10px;
    background: rgba(255, 87, 34, 0.1);
    border: 2px solid #FF5722;
    margin-bottom: 2rem;
  }

  #hero p {
    font-size: 1.25rem;
    margin-bottom: 1.5rem;
  }

  #team {
    padding: 1.5rem;
    text-align: left;
  }

  .team-grid {
    display: flex;
    gap: 2rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .team-card {
    background: rgba(255, 87, 34, 0.1);
    border: 2px solid #FF7043;
    border-radius: 10px;
    padding: 1.5rem;
    width: 250px;
    text-align: center;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .team-photo {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    margin-bottom: 1rem;
  }

  .team-card h3 {
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
  }

  .team-card p {
    font-size: 1rem;
    margin-bottom: 1rem;
  }

  .social-links {
    display: flex;
    gap: 1rem;
    justify-content: center;
  }

  .social-links a {
    text-decoration: none;
    color: #FF5722;
    font-weight: bold;
    transition: color 0.3s;
  }

  .social-links a:hover {
    color: #E65100;
  }

  footer {
    margin-top: 2rem;
    font-size: 1rem;
    color: #F57C00;
  }
</style>
