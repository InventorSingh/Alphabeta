		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
		filter: blur(50px);
	}

	#container {
		font-family: Arial, sans-serif;
		height: 100%;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		background: linear-gradient(to bottom, #FFF3E0, #FFE0B2);
		color: #E65100;
	}

	main {
		text-align: center;
		padding: 2rem;
	}

	#logo {
		width: 100px;
		margin-bottom: 1rem;
	}

	#hero {
		padding: 16px;
		border-radius: 10px;
		background: rgba(255, 87, 34, 0.1);
		border: 2px solid #FF5722;
		margin-bottom: 2rem;
	}

	#hero p {
		font-size: 1.25rem;
		margin-bottom: 1.5rem;
	}

	#actions {
		display: flex;
		gap: 16px;
		justify-content: center;
	}

