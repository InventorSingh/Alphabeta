---
import astroLogo from '../assets/astro.svg';
import sunriseTheme from '../assets/sunriseTheme.svg';
import alphabetaLogo from '../assets/logo.svg';
---

<div id="container">
	<img id="background" src={sunriseTheme.src} alt="Sunrise Theme Background" fetchpriority="high" />
	<main>
		<section id="hero">
			<img id="logo" src={alphabetaLogo.src} alt="Alphabeta Logo" width="100" />
			<h1>Welcome to Alphabeta</h1>
			<p>
				Empowering volunteers to showcase their skills, learn from experts, and make a meaningful impact by joining dynamic teams.
			</p>
			<section id="actions">
				<a class="button" href="/create-team">Create a Team</a>
				<a href="/featured-teams" class="button">Explore Featured Teams</a>
				<a href="/volunteer" class="button secondary">Volunteer with Us</a>
			</section>
		</section>
		<section id="volunteer-highlights">
			<h2>Why Volunteer with Alphabeta?</h2>
			<ul>
				<li>Showcase your unique skills and talents.</li>
				<li>Learn programming, social media, and business skills through real projects.</li>
				<li>Participate in interviews and mentoring sessions with experienced teams.</li>
				<li>Collaborate on meaningful community projects.</li>
			</ul>
		</section>
	</main>

	<footer>
		<p>&copy; 2024 Alphabeta - Empowering Volunteers, Building Communities</p>
	</footer>
</div>

<style>
	#logo {
		width: 200px;
		height: auto; /* optional, to maintain aspect ratio */
	}
	#background {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
		filter: blur(50px);
	}

	#container {
		font-family: Arial, sans-serif;
		height: 100%;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		background: linear-gradient(to bottom, #FFF3E0, #FFE0B2);
		color: #E65100;
	}

	main {
		text-align: center;
		padding: 2rem;
	}

	#hero {
		padding: 16px;
		border-radius: 10px;
		background: rgba(255, 87, 34, 0.1);
		border: 2px solid #FF5722;
		margin-bottom: 2rem;
	}

	#hero p {
		font-size: 1.25rem;
		margin-bottom: 1.5rem;
	}

	#actions {
		display: flex;
		gap: 16px;
		justify-content: center;
	}

	#actions a {
		display: inline-block;
		padding: 10px 20px;
		color: white;
		background: linear-gradient(to right, #FF9800, #FF5722);
		border-radius: 10px;
		text-decoration: none;
		transition: background-color 0.3s;
	}

	#actions a.secondary {
		background: linear-gradient(to right, #FFA726, #FF7043);
	}

	#actions a:hover {
		background: linear-gradient(to right, #E65100, #FF5722);
	}

	#volunteer-highlights {
		background: rgba(255, 87, 34, 0.05);
		border: 2px solid #FF7043;
		border-radius: 10px;
		padding: 1.5rem;
		margin-top: 2rem;
	}

	#volunteer-highlights h2 {
		font-size: 1.75rem;
		margin-bottom: 1rem;
	}

	#volunteer-highlights ul {
		list-style: none;
		padding: 0;
		font-size: 1rem;
	}

	#volunteer-highlights ul li {
		margin-bottom: 0.5rem;
		padding-left: 1.5rem;
		text-align: left;
		position: relative;
	}

	#volunteer-highlights ul li:before {
		content: '\2022';
		color: #FF5722;
		font-weight: bold;
		position: absolute;
		left: 0;
	}

	footer {
		margin-top: 2rem;
		font-size: 1rem;
		color: #F57C00;
	}
</style>
