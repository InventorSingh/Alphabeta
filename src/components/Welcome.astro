---
import sunriseTheme from '../assets/sunriseTheme.svg';
import alphabetaLogo from '../assets/alphabeta-logo.svg';
import Footer from './Footer.astro';
---

<div id="container">
	<img id="background" src={sunriseTheme.src} alt="Sunrise Theme Background" fetchpriority="high" />
	<main>
		<section id="hero">
			<img id="logo" src={alphabetaLogo.src} alt="Alphabeta Logo" />
			<h1>Technology with a ❤️</h1>
			<p>
				Alphabeta combines cutting-edge technology services with a passion for community empowerment. We deliver high-quality software solutions to businesses while helping volunteers learn, grow, and make an impact.
			</p>
			<section id="actions">
				<a class="button" href="/volunteer">Join as a Volunteer</a>
				<a href="/services" class="button">Hire Us</a>
				<a href="/community-projects" class="button secondary">Explore Projects</a>
				<a href="/core-team" class="button secondary">Our Team</a>
			</section>
		</section>

		<section id="offerings">
			<h2>What We Offer</h2>
			<div class="offer-grid">
				<div class="offer-card">
					<h3>For Businesses</h3>
					<p>
						Custom software development, marketing services, and skilled team partnerships to bring your projects to life.
					</p>
					<a href="/services" class="button">Learn More</a>
				</div>
				<div class="offer-card">
					<h3>For the Community</h3>
					<p>
						Volunteer opportunities to build skills in software, marketing, and leadership through real-world projects.
					</p>
					<a href="/volunteer" class="button secondary">Get Involved</a>
				</div>
			</div>
		</section>

		<section id="projects">
			<h2>Community Projects</h2>
			<p>
				Explore the impactful projects we're building together with our volunteers and partners.
			</p>
			<a href="/community-projects" class="button">Explore Projects</a>
		</section>
	</main>

	<Footer />
</div>

<style>
	#background {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
		filter: blur(30px) brightness(1.2);
	}

	#container {
		font-family: 'Montserrat', Arial, sans-serif;
		height: auto;
		min-height: 100vh;
		display: flex;
		flex-direction: column;
		align-items: center;
		background: linear-gradient(to bottom, #FFF3E0, #FFCC80);
		color: #E65100;
		overflow-y: auto;
	}

	main {
		text-align: center;
		padding: 2rem;
	}

	#logo {
		width: 240px;
		margin-bottom: 1rem;
	}

	#hero {
		padding: 24px;
		border-radius: 15px;
		background: rgba(255, 152, 0, 0.15);
		border: 2px solid #FF9800;
		box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
		margin-bottom: 2.5rem;
	}

	#hero h1 {
		font-size: 3rem;
		margin-bottom: 1rem;
		font-weight: 700;
	}

	#hero p {
		font-size: 1.5rem;
		margin-bottom: 2rem;
		line-height: 1.8;
	}

	#actions {
		display: flex;
		gap: 20px;
		justify-content: center;
	}

	#actions a {
		display: inline-block;
		padding: 12px 24px;
		color: white;
		background: linear-gradient(to right, #FFA726, #FF5722);
		border-radius: 12px;
		text-decoration: none;
		transition: all 0.3s ease;
		font-size: 1.2rem;
		font-weight: bold;
	}

	#actions a.secondary {
		background: linear-gradient(to right, #FFCC80, #FF7043);
	}

	#actions a:hover {
		transform: scale(1.05);
		background: linear-gradient(to right, #E65100, #FF5722);
	}

	#offerings {
		margin: 3rem 0;
		padding: 2rem;
		background: rgba(255, 183, 77, 0.15);
		border-radius: 12px;
		box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
	}

	.offer-grid {
		display: flex;
		gap: 2rem;
		justify-content: center;
		flex-wrap: wrap;
	}

	.offer-card {
		background: rgba(255, 152, 0, 0.15);
		border: 2px solid #FF7043;
		border-radius: 12px;
		padding: 1.5rem;
		width: 300px;
		text-align: left;
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
	}

	.offer-card h3 {
		font-size: 1.8rem;
		margin-bottom: 0.8rem;
	}

	.offer-card p {
		font-size: 1.1rem;
		margin-bottom: 1.2rem;
		line-height: 1.6;
	}

	#projects {
		margin: 3rem 0;
	}

	#projects h2 {
		font-size: 2.5rem;
		margin-bottom: 1rem;
	}

	#projects p {
		font-size: 1.2rem;
		margin-bottom: 1.5rem;
		line-height: 1.8;
	}

	footer {
		margin-top: 3rem;
		font-size: 1rem;
		color: #FF7043;
	}
</style>
