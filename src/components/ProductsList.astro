---
const products = [
    {
        title: "Terracotta Self-Watering Planter",
        description: "A handmade clay planter designed to regulate indoor temperature and improve air quality. Features a self-watering system to ensure your plants thrive effortlessly.",
        image: "/products/self-watering-planter.jpg",
        price: "$30.00"
    },
    {
        title: "Herb Garden Guild Kit",
        description: "An eco-friendly herb garden kit with clay pots and complementary plants like basil, mint, and marigolds. Designed for sustainable indoor gardening.",
        image: "/products/herb-garden-kit.jpg",
        price: "$45.00"
    },
    {
        title: "Terracotta Rooftop Planter",
        description: "A large terracotta planter perfect for rooftop gardens. Helps reduce urban heat and promotes a greener city environment.",
        image: "/products/rooftop-planter.jpg",
        price: "$60.00"
    },
    {
        title: "Compact Clay Compost Bin",
        description: "A compact clay compost bin that turns kitchen waste into natural fertilizer for your plants. Perfect for indoor and outdoor use.",
        image: "/products/compost-bin.jpg",
        price: "$50.00"
    },
    {
        title: "Air-Purifying Indoor Plant Kit",
        description: "Includes a terracotta pot and a snake plant, known for its air-purifying properties. Ideal for improving indoor air quality.",
        image: "/products/air-purifying-plant.jpg",
        price: "$25.00"
    }
];
---

<div class="products" style="display: flex; flex-wrap: wrap; justify-content: center; gap: 2rem; padding: 2rem;">
    {products.map(product => (
        <div class="product-card" style="width: 250px; border: 1px solid #ddd; padding: 1rem; border-radius: 8px; background-color: #fff; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
            <div style="width: 100%; height: 180px; overflow: hidden; border-radius: 8px;">
                <img src={product.image} alt={product.title} style="width: 100%; height: 100%; object-fit: cover;" />
            </div>
            <h3 style="font-size: 1.25rem; margin: 0.75rem 0; color: #333;">{product.title}</h3>
            <p style="font-size: 0.9rem; color: #555;">{product.description}</p>
            <p style="font-size: 1rem; font-weight: bold; margin-top: 0.5rem;">{product.price}</p>
            <button style="margin-top: 0.75rem; padding: 0.5rem 1rem; background-color: #4CAF50; color: white; border: none; border-radius: 5px; cursor: pointer;">Buy Now</button>
        </div>
    ))}
</div>
