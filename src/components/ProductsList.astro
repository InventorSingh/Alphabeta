---
const products = [
    {
        title: "Self-Watering Planter",
        description: "Eco-friendly planter designed to reduce water usage and promote healthy plant growth.",
        image: "/products/self-watring-planters.webp",
        price: "$25.00"
    },
    {
        title: "Herb Garden Kit",
        description: "Grow fresh herbs right in your kitchen with our easy-to-use garden kit.",
        image: "/products/herb-garden-kit.webp",
        price: "$35.00"
    },
    {
        title: "Terracotta Rooftop Planter",
        description: "A stylish terracotta planter perfect for rooftop gardens to cool down urban spaces.",
        image: "/products/rooftop-planter.webp",
        price: "$45.00"
    },
    {
        title: "Air-Purifying Indoor Plant",
        description: "A low-maintenance indoor plant that improves air quality and enhances your living space.",
        image: "/products/air-purifying-indoor.webp",
        price: "$20.00"
    }
];
---

<div class="products" style="display: flex; flex-wrap: wrap; justify-content: center; gap: 2rem; padding: 2rem;">
    {products.map(product => (
        <div class="product-card" style="width: 250px; border: 1px solid #ddd; padding: 1rem; border-radius: 8px; background-color: #fff; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
            <div style="width: 100%; height: 180px; overflow: hidden; border-radius: 8px;">
                <img src={product.image} alt={product.title} style="width: 100%; height: 100%; object-fit: cover;" />
            </div>
            <h3 style="font-size: 1.25rem; margin: 0.75rem 0; color: #333;">{product.title}</h3>
            <p style="font-size: 0.9rem; color: #555;">{product.description}</p>
            <p style="font-size: 1rem; font-weight: bold; margin-top: 0.5rem;">{product.price}</p>
            <button style="margin-top: 0.75rem; padding: 0.5rem 1rem; background-color: #4CAF50; color: white; border: none; border-radius: 5px; cursor: pointer;">Buy Now</button>
        </div>
    ))}
</div>